{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false, // false for easier migration
        "skipLibCheck": true,
        "rootDir": "./",
        "outDir": "dist",
        "declaration": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowJs": true // remove once all JS is removed
    },
    "include": ["**/*.ts", "hardhat.config.js"],
    "exclude": ["node_modules", "dist"],
}
